<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.uninix.v.zerotoone.StartScreen">

    <TextView
        android:id="@+id/zerotoone"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@color/grey"
        android:gravity="center_horizontal"
        android:text="@string/zerotoone"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/modeFour"
        android:layout_width="144dp"
        android:layout_height="144dp"
        app:srcCompat="@drawable/_4x4"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY"
        android:padding="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/zerotoone"
        app:layout_constraintVertical_bias="0.35000002" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeFour"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/modeSix"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/_6x6"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/modeEight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/_8x8" />

        <ImageView
            android:id="@+id/modeTen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/_10x10"
            android:layout_marginStart="5dp" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
